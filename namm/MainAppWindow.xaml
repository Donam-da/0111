<Window x:Class="namm.MainAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:namm"
        mc:Ignorable="d"
        Title="Chương trình Quản lý Cafe" Height="600" Width="1024"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top" FontSize="14">
            <MenuItem Click="Home_Click" ToolTip="Quay về màn hình chính">
                <MenuItem.Header>
                    <Path Data="M12 2.09954L21 10.0995V21.0001H15V15.0001H9V21.0001H3V10.0995L12 2.09954Z" 
                          Stroke="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}" StrokeThickness="1.5" Width="16" Height="16" Stretch="Uniform"/>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Header="_Hệ thống" Click="TopLevelMenuItem_Click">
                <MenuItem x:Name="miManageEmployees" Header="Quản lí nhân viên" Click="ManageEmployees_Click"/>
                <MenuItem Header="Đổi mật khẩu" Click="ChangePassword_Click"/>
                <Separator/>
                <MenuItem Header="Đăng xuất" Click="Logout_Click"/>
                <Separator/>
                <MenuItem x:Name="miDeleteHistory" Header="Xóa lịch sử hóa đơn"/>
            </MenuItem>
            <MenuItem Header="_Quản lí" Click="TopLevelMenuItem_Click">
                <MenuItem Header="Quản lí bàn" Click="ManageTables_Click"/>
                <MenuItem Header="Quản lí Đồ uống (Tổng)" Click="ManageMenu_Click" ToolTip="Quản lý danh sách đồ uống chính của quán."/>
                <MenuItem Header="Quản lí đồ uống pha chế" Click="ManageRecipes_Click" ToolTip="Thiết lập công thức cho đồ uống pha chế."/>
                <MenuItem Header="Quản lí đồ uống nguyên bản" Click="ManageOriginalDrinks_Click" ToolTip="Thiết lập giá nhập/bán cho đồ uống nguyên bản."/>
                <MenuItem Header="Quản lí loại đồ uống"/>
                <MenuItem Header="Quản lí nguyên liệu" Click="ManageMaterials_Click"/>
                <MenuItem Header="Quản lí đơn vị tính" Click="ManageUnits_Click"/>
            </MenuItem>
            <MenuItem x:Name="miStatistics" Header="_Thống kê" Click="TopLevelMenuItem_Click">
                <MenuItem Header="Doanh thu nhân viên"/>
                <MenuItem x:Name="miProfitStatistics" Header="Thống kê lợi nhuận"/>
                <MenuItem Header="Top hàng bán chạy"/>
                <MenuItem Header="Khách hàng thân thiết"/>
                <MenuItem Header="Lịch sử hóa đơn"/>
            </MenuItem>
        </Menu>
        <Grid x:Name="MainContent">
            <!-- Nội dung chính của ứng dụng sẽ được hiển thị ở đây -->
        </Grid>
    </DockPanel>
</Window>