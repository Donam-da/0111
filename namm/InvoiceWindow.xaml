<Window x:Class="namm.InvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:namm"
        mc:Ignorable="d"
        Title="Hóa đơn thanh toán" Height="650" Width="450"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        FontFamily="Segoe UI">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Phần Header: Thông tin quán và hóa đơn -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" TextBlock.TextAlignment="Center">
            <TextBlock Text="Quán Namm" FontSize="24" FontWeight="Bold" Foreground="#1A5276"/>
            <TextBlock Text="Canteen Phenikaa, Yên Nghĩa, Hà Đông, Hà Nội" FontSize="12" Foreground="Gray"/>
            <TextBlock Text="Điện thoại: 0855.361.500" FontSize="12" Foreground="Gray"/>
            <TextBlock Text="HÓA ĐƠN THANH TOÁN" FontSize="20" FontWeight="SemiBold" Margin="0,20,0,0"/>
        </StackPanel>

        <!-- Phần thông tin chi tiết: Bàn, Khách hàng, Ngày -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="0,1,0,1" Margin="0,15" Padding="0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Số HĐ:" FontWeight="SemiBold" Margin="0,0,10,2"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="tbInvoiceId" Text="HD00123"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Bàn:" FontWeight="SemiBold" Margin="0,0,10,2"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="tbTableName" Text="Bàn 01"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Khách hàng:" FontWeight="SemiBold" Margin="0,0,10,2"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="tbCustomerName" Text="Đỗ Hoài Nam"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Mã KH:" FontWeight="SemiBold" Margin="0,0,10,2"/>
                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="tbCustomerCode" Text="N/A"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Ngày:" FontWeight="SemiBold" Margin="0,0,10,2"/>
                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="tbDateTime" Text="20/10/2023 10:30 AM"/>
            </Grid>
        </Border>

        <!-- Danh sách các món ăn -->
        <ListView Grid.Row="2" x:Name="lvBillItems" BorderThickness="0" HorizontalContentAlignment="Stretch">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Focusable" Value="False"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridView.ColumnHeaderContainerStyle>
                        <Style TargetType="{x:Type GridViewColumnHeader}">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </GridView.ColumnHeaderContainerStyle>

                    <GridViewColumn Header="Tên món" Width="160">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DrinkName}" TextWrapping="Wrap" TextAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="SL" Width="40">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Quantity}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Đơn giá" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Price, StringFormat={}{0:N0}}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Thành tiền" Width="90">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:N0}}" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Phần tổng tiền -->
        <StackPanel Grid.Row="3" Margin="0,10,0,0">
            <Separator/>
            <Grid Margin="0,10,0,0">
                <TextBlock Text="TỔNG CỘNG" FontSize="16" FontWeight="Bold"/>
                <TextBlock x:Name="tbTotalAmount" Text="150,000 VNĐ" FontSize="16" FontWeight="Bold" HorizontalAlignment="Right"/>
            </Grid>
            <TextBlock Text="Cảm ơn quý khách và hẹn gặp lại!" FontStyle="Italic" TextAlignment="Center" Margin="0,20,0,0"/>
        </StackPanel>

        <!-- Các nút chức năng -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnPrint" Content="In hóa đơn" Width="120" Height="35" Margin="5" Click="BtnPrint_Click"/>
            <Button x:Name="btnConfirm" Content="Xác nhận thanh toán" Width="160" Height="35" Margin="5" FontWeight="Bold" Background="#4CAF50" Foreground="White" Click="BtnConfirm_Click"/>
        </StackPanel>
    </Grid>
</Window>