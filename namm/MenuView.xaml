<UserControl x:Class="namm.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:namm"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="1000"
             Loaded="UserControl_Loaded">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <!-- Cột 1: Danh sách đồ uống trên menu -->
        <DockPanel Grid.Column="0" Margin="0,0,10,0">
            <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
                <TextBlock Text="DANH SÁCH ĐỒ UỐNG TRÊN MENU" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBox x:Name="txtSearch" Margin="0,0,0,5" Height="25" ToolTip="Nhập tên đồ uống để tìm kiếm" TextChanged="TxtSearch_TextChanged"/>
            </StackPanel>
            <DataGrid x:Name="dgMenuItems" AutoGenerateColumns="False" IsReadOnly="True"                      
                      SelectionMode="Single" SelectionChanged="DgMenuItems_SelectionChanged" 
                      LoadingRow="DgMenuItems_LoadingRow">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="STT" Binding="{Binding STT}" Width="50" />
                    <DataGridTextColumn Header="Tên đồ uống" Binding="{Binding Name}" Width="*" />
                    <DataGridTextColumn Header="Mã Đồ Uống" Binding="{Binding DrinkCode}" Width="120" />
                    <DataGridTextColumn Header="Loại" Binding="{Binding CategoryName}" Width="120" />
                    <DataGridTextColumn Header="Giá bán" Binding="{Binding ActualPrice, StringFormat={}{0:N0}}" Width="100" />
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding StatusText}" Width="80" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <!-- Cột 2: Thông tin chi tiết và chức năng -->
        <DockPanel Grid.Column="1">
            <TextBlock DockPanel.Dock="Top" Text="THIẾT LẬP GIÁ BÁN" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel>
                <TextBlock Text="Tên đồ uống:" Margin="0,5,0,2"/>
                <ComboBox x:Name="cbDrink" Padding="5" DisplayMemberPath="Name" SelectedValuePath="ID"
                          SelectionChanged="CbDrink_SelectionChanged"
                          ToolTip="Chọn từ danh sách đồ uống nguyên bản"/>

                <TextBlock Text="Mã đồ uống:" Margin="0,10,0,2"/>
                <TextBox x:Name="txtDrinkCode" Padding="5" IsReadOnly="True" Background="#EEEEEE" ToolTip="Mã này được tạo tự động"/>

                <TextBlock Text="Giá bán cho khách:" Margin="0,10,0,2"/>
                <TextBox x:Name="txtActualPrice" Padding="5"/>

                <CheckBox x:Name="chkIsActive" Content="Hiển thị trên menu" Margin="0,15,0,0" IsChecked="True"/>

                <WrapPanel HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="btnUpdate" Content="Cập nhật giá" Width="100" Margin="5" Click="BtnUpdate_Click"/>
                    <Button x:Name="btnReset" Content="Làm mới" Width="100" Margin="5" Click="BtnReset_Click"/>
                </WrapPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
