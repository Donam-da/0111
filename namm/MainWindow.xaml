<Window x:Class="namm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:namm"
        mc:Ignorable="d"
        Title="Đăng nhập - Quản lý Cafe" Height="300" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="ĐĂNG NHẬP HỆ THỐNG" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,20,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Tên đăng nhập:" Width="120" VerticalAlignment="Center" FontSize="14"/>
                <TextBox x:Name="txtUsername" Width="200" FontSize="14" Padding="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Mật khẩu:" Width="120" VerticalAlignment="Center" FontSize="14"/>
                <PasswordBox x:Name="pwbPassword" Width="200" FontSize="14" Padding="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,20,10,10">
                <Button x:Name="btnLogin" Content="Đăng nhập" Width="100" Margin="0,0,10,0" 
                        Click="BtnLogin_Click" IsDefault="True"/>
                <Button x:Name="btnExit" Content="Thoát" Width="100" 
                        Click="BtnExit_Click" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
