<UserControl x:Class="namm.DeleteHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:namm"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="Segoe UI" Loaded="UserControl_Loaded">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="600">
            <!-- Tiêu đề -->
            <TextBlock Text="XÓA LỊCH SỬ HÓA ĐƠN" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#2E4053" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Khung cảnh báo -->
            <Border BorderBrush="OrangeRed" BorderThickness="2" CornerRadius="5" Padding="15" Background="#FFF0F0">
                <StackPanel>
                    <TextBlock Text="CẢNH BÁO" FontWeight="Bold" FontSize="16" Foreground="OrangeRed" HorizontalAlignment="Center"/>
                    <TextBlock TextWrapping="Wrap" Margin="0,10,0,0" TextAlignment="Center">
                        Hành động này sẽ <Run FontWeight="Bold">xóa vĩnh viễn</Run> lịch sử hóa đơn và các chi tiết liên quan trước ngày đã chọn.
                        Dữ liệu đã xóa <Run FontWeight="Bold" Foreground="Red">KHÔNG THỂ</Run> khôi phục.
                    </TextBlock>
                    <TextBlock Text="Hãy chắc chắn bạn đã sao lưu cơ sở dữ liệu nếu cần thiết." TextAlignment="Center" Margin="0,5,0,0" FontStyle="Italic"/>
                </StackPanel>
            </Border>

            <!-- Chọn chế độ xóa -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,10">
                <TextBlock Text="Chế độ xóa:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,15,0"/>
                <RadioButton x:Name="rbBeforeDate" Content="Trước ngày" IsChecked="True" GroupName="DeleteMode" Checked="DeleteMode_Changed"/>
                <RadioButton x:Name="rbOnDate" Content="Trong ngày" GroupName="DeleteMode" Margin="15,0,0,0" Checked="DeleteMode_Changed"/>
                <RadioButton x:Name="rbInWeek" Content="Theo tuần" GroupName="DeleteMode" Margin="15,0,0,0" Checked="DeleteMode_Changed"/>
                <RadioButton x:Name="rbInMonth" Content="Theo tháng" GroupName="DeleteMode" Margin="15,0,0,0" Checked="DeleteMode_Changed"/>
            </StackPanel>

            <!-- Phần điều khiển -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,10">
                <TextBlock x:Name="tbDateSelectionLabel" Text="Xóa tất cả hóa đơn TRƯỚC ngày:" VerticalAlignment="Center" FontSize="14"/>
                <DatePicker x:Name="dpDate" Width="150" Margin="10,0" VerticalContentAlignment="Center" FontSize="14" SelectedDateChanged="DpDate_SelectedDateChanged"/>
            </StackPanel>

            <!-- Thông tin chi tiết khoảng thời gian -->
            <TextBlock x:Name="tbDateRangeInfo" 
                       HorizontalAlignment="Center" 
                       Margin="0,5,0,0" 
                       FontSize="12" 
                       FontStyle="Italic" 
                       Foreground="DarkSlateGray"
                       Visibility="Collapsed"/>

            <!-- Nút thực thi -->
            <Button x:Name="btnDelete" 
                    Content="XÓA DỮ LIỆU" 
                    Width="200" 
                    Height="40" 
                    Margin="0,20,0,10" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Background="#DC3545" 
                    Foreground="White"
                    Click="BtnDelete_Click">
                <Button.ToolTip>
                    <ToolTip Content="Nhấn để bắt đầu quá trình xóa dữ liệu không thể hoàn tác."/>
                </Button.ToolTip>
            </Button>

            <!-- Kết quả -->
            <TextBlock x:Name="tbResult" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="14" FontWeight="SemiBold" Foreground="DarkGreen"/>
        </StackPanel>
    </Grid>
</UserControl>