<UserControl x:Class="namm.DeleteHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:namm"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="Segoe UI" Loaded="UserControl_Loaded">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid MaxWidth="700" Margin="20">
            <!-- Bố cục chính với 3 hàng: Tiêu đề, Cảnh báo, Nội dung -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề -->
            <TextBlock Grid.Row="0" Text="XÓA LỊCH SỬ HÓA ĐƠN" 
                       FontSize="20" FontWeight="Bold" Foreground="#2E4053" 
                       HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <!-- Khung cảnh báo -->
            <Border Grid.Row="1" BorderBrush="OrangeRed" BorderThickness="2" CornerRadius="5" Padding="15" Background="#FFF0F0" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="CẢNH BÁO" FontWeight="Bold" FontSize="16" Foreground="OrangeRed" HorizontalAlignment="Center"/>
                    <TextBlock TextWrapping="Wrap" Margin="0,10,0,0" TextAlignment="Center">
                        Hành động này sẽ <Run FontWeight="Bold">xóa vĩnh viễn</Run> lịch sử hóa đơn và các chi tiết liên quan.
                        Dữ liệu đã xóa <Run FontWeight="Bold" Foreground="Red">KHÔNG THỂ</Run> khôi phục.
                    </TextBlock>
                    <TextBlock Text="Hãy chắc chắn bạn đã sao lưu cơ sở dữ liệu nếu cần thiết." TextAlignment="Center" Margin="0,5,0,0" FontStyle="Italic"/>
                </StackPanel>
            </Border>

            <!-- Phần nội dung chính chia 2 cột: Trái (Cài đặt), Phải (Hành động) -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Cột Trái: Khu vực cài đặt -->
                <GroupBox Grid.Column="0" Header="Tùy chọn xóa" FontWeight="SemiBold" Padding="10" Margin="0,0,20,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Chọn chế độ xóa -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,15">
                            <TextBlock Text="Chế độ:" VerticalAlignment="Center" FontWeight="Normal" Margin="0,0,15,0"/>
                            <RadioButton x:Name="rbBeforeDate" Content="Trước ngày" IsChecked="True" GroupName="DeleteMode" Checked="DeleteMode_Changed"/>
                            <RadioButton x:Name="rbOnDate" Content="Theo ngày" GroupName="DeleteMode" Margin="15,0,0,0" Checked="DeleteMode_Changed"/>
                            <RadioButton x:Name="rbInWeek" Content="Theo tuần" GroupName="DeleteMode" Margin="15,0,0,0" Checked="DeleteMode_Changed"/>
                            <RadioButton x:Name="rbInMonth" Content="Theo tháng" GroupName="DeleteMode" Margin="15,0,0,0" Checked="DeleteMode_Changed"/>
                        </StackPanel>

                        <!-- Phần điều khiển chọn ngày -->
                        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Left" Margin="0,10,0,5">
                            <TextBlock x:Name="tbDateSelectionLabel" Text="Xóa tất cả hóa đơn TRƯỚC ngày:" HorizontalAlignment="Left" FontSize="14" Margin="0,0,0,10"/>
                            <DatePicker x:Name="dpDate" Width="150" VerticalContentAlignment="Center" FontSize="14" SelectedDateChanged="DpDate_SelectedDateChanged" Visibility="Visible"/>
                            <Calendar x:Name="calendarMultiSelect" 
                                      SelectionMode="MultipleRange"
                                      Visibility="Collapsed"
                                      SelectedDatesChanged="CalendarMultiSelect_SelectedDatesChanged"
                                      PreviewMouseLeftButtonDown="CalendarMultiSelect_PreviewMouseLeftButtonDown"/>
                        </StackPanel>

                        <!-- Thông tin chi tiết -->
                        <StackPanel Grid.Row="2" HorizontalAlignment="Left" Margin="0,5,0,0">
                            <TextBlock x:Name="tbDateRangeInfo" 
                                       FontSize="12" FontStyle="Italic" Foreground="DarkSlateGray"
                                       Visibility="Collapsed" TextWrapping="Wrap" MaxWidth="500" TextAlignment="Left"/>                           
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Cột Phải: Nút thực thi và kết quả -->
                <Grid Grid.Column="1" HorizontalAlignment="Right">
                    <StackPanel VerticalAlignment="Top" Margin="0,30,0,0">
                        <!-- Bảng chi tiết các ngày đã chọn, cao tối đa khoảng 5 dòng -->
                        <ListView x:Name="lvSelectedDates" Height="155" Visibility="Collapsed"
                                  BorderBrush="LightGray" BorderThickness="1">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Ngày chọn" DisplayMemberBinding="{Binding Date, StringFormat=dd/MM/yyyy}" Width="100"/>
                                    <GridViewColumn Header="Số hóa đơn" Width="85">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding InvoiceCount}" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <!-- Dòng tổng kết -->
                        <Border x:Name="borderTotal" BorderBrush="LightGray" BorderThickness="1,0,1,1" Padding="5" Background="#F9F9F9" Visibility="Collapsed">
                            <Grid>
                                <TextBlock Text="Tổng cộng:" FontWeight="Bold"/>
                                <TextBlock x:Name="tbTotalInvoiceCount" HorizontalAlignment="Right" FontWeight="Bold" Foreground="DarkRed"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Các nút điều khiển và kết quả được đặt cố định ở dưới cùng -->
                    <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,20">
                        <Button x:Name="btnDelete" 
                                Content="XÓA DỮ LIỆU" 
                                Width="200" Height="40" 
                                FontSize="16" FontWeight="Bold" 
                                Background="#DC3545" Foreground="White"
                                Click="BtnDelete_Click"/>
                        <TextBlock x:Name="tbResult" 
                                   Margin="0,10,0,0" 
                                   FontSize="14" FontWeight="SemiBold" Foreground="DarkGreen"
                                   TextWrapping="Wrap" TextAlignment="Right"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>